<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            background: linear-gradient(135deg, #121212, #1e1e1e);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 40px;
            color: #e0e0e0;
        }

        h2 {
            text-align: center;
            color: #00eaff;
            margin-bottom: 30px;
        }

        table {
            width: 90%;
            margin: auto;
            border-collapse: collapse;
            box-shadow: 0 0 10px rgba(0, 196, 255, 0.3);
            background-color: #1c1c1c;
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 15px;
            text-align: center;
            border: 1px solid #2e2e2e;
        }

        thead {
            background-color: #007bff;
            color: white;
        }

        tbody tr:nth-child(even) {
            background-color: #2a2a2a;
        }

        tbody tr:nth-child(odd) {
            background-color: #1f1f1f;
        }

        tbody td {
            color: #e0e0e0;
        }

        .btn {
            padding: 8px 12px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: bold;
            transition: 0.3s;
        }

        .btn-edit {
            background-color: #00c4ff;
            color: #000;
        }

            .btn-edit:hover {
                background-color: #00b0e0;
            }

        .btn-delete {
            background-color: #ff4d4d;
            color: #fff;
        }

            .btn-delete:hover {
                background-color: #e03c3c;
            }

        .actions {
            display: flex;
            justify-content: center;
            gap: 10px;
        }
    </style>
</head>
<body>
    <h2>Lista de Clases</h2>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Grado</th>
                <th>Sección</th>
                <th>Horario</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var clase in Model)
            {
                <tr>
                    <td>@clase.Id</td>
                    <td>@clase.Nombre</td>
                    <td>@clase.Grado</td>
                    <td>@clase.Seccion</td>
                    <td>@clase.Horario</td>
                    <td><a class="btn btn-sm btn-warning" href="/Clases/Edit/@clase.Id">Editar</a>
                        <a class="btn btn-sm btn-warning" href="/Clases/Delete/@clase.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-sm btn-warning" href="/Clases/Create">Agregar Clase</a>
</body>
</html>

