<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Lista de Clases</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            color: #333;
        }

        header, footer {
            padding: 15px;
            background-color: #333;
            color: white;
            text-align: center;
        }

        .main-content {
            flex-grow: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .top-actions {
            width: 100%;
            max-width: 900px;
            text-align: right;
            margin-bottom: 20px;
        }

        .btn-crear {
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            font-weight: bold;
            transition: 0.3s;
        }

            .btn-crear:hover {
                background-color: #218838;
            }

        table {
            width: 100%;
            max-width: 900px;
            margin: auto;
            border-collapse: collapse;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #ddd;
            color: #e0e0e0;
        }

        thead {
            background-color: #007bff;
            color: white;
        }

        tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tbody tr:hover {
            background-color: #e9ecef;
        }

        tbody td {
            color: #555;
        }

        .actions {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .btn {
            padding: 8px 12px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: bold;
            transition: 0.3s;
            text-decoration: none;
        }

        .btn-edit {
            background-color: #ffc107;
            color: #212529;
        }

            .btn-edit:hover {
                background-color: #e0a800;
            }

        .btn-delete {
            background-color: #dc3545;
            color: #fff;
        }

            .btn-delete:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>
    <header>
        <h1>MiAula</h1>
    </header>

    <div class="main-content">
       
        <h2>Lista de Clases</h2>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Grado</th>
                    <th>Sección</th>
                    <th>Horario</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var clase in Model)
                {
                    <tr>
                        <td>@clase.Id</td>
                        <td>@clase.Nombre</td>
                        <td>@clase.Grado</td>
                        <td>@clase.Seccion</td>
                        <td>@clase.Horario</td>
                        <td>
                            <a class="btn btn-edit" href="/Clases/Edit/@clase.Id">Editar</a>
                            <a class="btn btn-delete" href="/Clases/Delete/@clase.Id">Eliminar</a>
                            <a class="btn btn-delete" href="/Clases/Alumnos_EN_CLASE/@clase.Id">Ver Alumnos</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <footer>
        &copy; 2025 - MiAula. Todos los derechos reservados.
    </footer>
</body>
</html>


