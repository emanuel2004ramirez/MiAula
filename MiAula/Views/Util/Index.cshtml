@{
    var clases = ViewBag.ListaClases as List<MiAula.Models.Clase>;
}

<h2>Agregar Útil Escolar</h2>
<form method="post" asp-action="Crear">
    <div class="mb-3">
        <label for="claseId" class="form-label">Clase:</label>
        <select id="claseId" name="claseId" class="form-select" required>
            <option value="">-- Seleccione --</option>
            @foreach (var clase in clases)
            {
                <option value="@clase.Id">@clase.Nombre</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre del útil:</label>
        <input type="text" id="nombre" name="nombre" class="form-control" required />
    </div>

    <div class="form-check mb-3">
        <input type="checkbox" id="obligatorio" name="obligatorio" value="true" class="form-check-input" />
        <label for="obligatorio" class="form-check-label">Obligatorio</label>
    </div>


    <button type="submit" class="btn btn-primary">Agregar Útil</button>
</form>
