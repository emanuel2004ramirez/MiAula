<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiAula</title>

    <!-- Bootstrap Dark Mode -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }
        .navbar {
            background: linear-gradient(90deg, #1e1e1e, #2c2c2c);
        }
        .navbar-brand {
            font-weight: bold;
            color: #00c4ff !important;
        }
        .navbar-brand:hover {
            color: #1de9b6 !important;
        }
        .nav-link {
            transition: 0.3s;
        }
        .nav-link:hover {
            color: #00c4ff !important;
        }
        footer {
            background: #1e1e1e;
            color: #aaa;
            padding: 1rem 0;
        }
        footer a {
            color: #00c4ff;
            text-decoration: none;
        }
        footer a:hover {
            color: #1de9b6;
        }
        main {
            animation: fadeIn 0.6s ease-in-out;
        }
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .icon-glow {
            color: #00c4ff;
            transition: 0.3s;
        }
        .icon-glow:hover {
            text-shadow: 0px 0px 10px #00c4ff;
            color: #1de9b6;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-graduation-cap icon-glow"></i> MiAula
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">

                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        
                       
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-chalkboard-teacher"></i> Clases
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" href="/Clases">Ver Clases</a></li>
                                <li><a class="dropdown-item" href="/Clases/Create">Crear Clase</a></li>

                            </ul>
                        </li>
                        
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-chalkboard-teacher"></i> Alumnos
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" href="/Alumno/Create">Agregar alumno</a></li>
                                <li><a class="dropdown-item" href="/Alumno/Buscar_Alumno">Buscar alumno</a></li>
                                <li><a class="dropdown-item" href="/ClasesAlumno/indexSeccion">Agregar Clases </a></li>
                                <li><a class="dropdown-item" href="/Clases/Horario">Horario</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-chalkboard-teacher"></i> Planificacion
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" href="/Planificacion/index2">Ver Planificaciones</a></li>
                                <li><a class="dropdown-item" href="/Planificacion">Crear Planificacion</a></li>

                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-chalkboard-teacher"></i> Ingresar Notas
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" href="Calificacion/">Calificar</a></li>
                                <li><a class="dropdown-item" href="/Planificacion"></a></li>

                            </ul>
                        </li>

                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="btn btn-danger btn-sm" href="#">
                                <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-center">
        <div class="container">
            <p>
                &copy; 2025 - MiAula
                <i class="fas fa-book-reader icon-glow"></i> -
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script>
        // Ejemplo: mensaje dinámico en consola
        console.log("%c Bienvenido a MiAula 🚀", "color:#00c4ff; font-size:16px; font-weight:bold;");
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
